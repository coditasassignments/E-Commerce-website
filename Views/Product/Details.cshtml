@model E_Commerce_Website.Models.Product

@{
    ViewBag.Title = "Product Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="max-width: 600px; margin: auto; padding: 40px;">

    <img src="@Model.Image" alt="@Model.Name" style="width:100%; height:300px; object-fit:cover; border-radius:10px;" />
    <h2 style="margin-top:20px;">@Model.Name</h2>
    <p>@Model.Description</p>
    <p style="font-weight: bold; color:#e91e63;">Price: Rs.@Model.Price</p>
    <a href="/Product/Index">Back to Products</a>
</div>
<form asp-controller="Cart" asp-action="AddToCart" method="post">
    <input type="hidden" name="productId" value="@Model.ID" />
    <input type="number" name="quantity" value="1" min="1" class="form-control w-25 d-inline" />
    <button type="submit" class="btn btn-primary mt-2">Add to Cart</button>
</form>


