@model E_Commerce_Website.Models.Product

<div class="container mt-5">
    <div class="card p-4 shadow-sm">
        <h2 class="text-center text-dark mb-4">Update Quantity</h2>

        <form asp-action="UpdateQuantity" method="post">
            <input type="hidden" asp-for="ID" />

            <div class="form-group mb-3">
                <label asp-for="Name" class="form-label fw-semibold">Product Name</label>
                <input asp-for="Name" class="form-control" disabled />
            </div>

            <div class="form-group mb-4">
                <label asp-for="Quantity" class="form-label fw-semibold">New Quantity</label>
                <input asp-for="Quantity" class="form-control" type="number" min="0" />
            </div>

            <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-primary px-4">Update</button>
            </div>
        </form>
    </div>
</div>
