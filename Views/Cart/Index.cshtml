@model List<E_Commerce_Website.Models.CartItem>

<h2>Your Cart</h2>

@if (!Model.Any())
{
    <p>Your cart is empty.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Product?.Name</td>
                    <td>₹@item.Product?.Price</td>
                    <td>@item.Quantity</td>
                    <td>₹@(item.Product?.Price * item.Quantity)</td>
                </tr>
            }
        </tbody>
    </table>
}
